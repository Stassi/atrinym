{
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build:all": "turbo run build",
    "integrity:repair": "pnpm run integrity:validate --fix",
    "integrity:repair:all": "turbo run integrity:repair",
    "integrity:validate": "eslint . --ext cjs,js,json,mjs,ts,tsx --ignore-pattern apps/* --ignore-pattern packages/*",
    "integrity:validate:all": "turbo run integrity:validate",
    "start:dev:all": "turbo run start:dev",
    "start:prod:all": "turbo run start:prod",
    "test:all": "turbo run test",
    "turbo:daemon:reload": "turbo daemon clean"
  },
  "devDependencies": {
    "eslint": "^8.53.0",
    "eslint-config-custom": "workspace:*",
    "prettier": "3.0.3",
    "turbo": "^1.10.16",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.10.2",
  "eslintConfig": {
    "extends": "custom",
    "root": true,
    "settings": {
      "next": {
        "rootDir": [
          "apps/*/"
        ]
      }
    }
  },
  "prettier": "@vercel/style-guide/prettier"
}
