{
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "integrity:repair": "pnpm run lint --fix",
    "integrity:repair:all": "turbo run integrity:repair",
    "integrity:validate": "eslint . --ext cjs,js,json,mjs,ts,tsx --ignore-pattern apps/* --ignore-pattern packages/*",
    "integrity:validate:all": "turbo run integrity:validate",
    "pid:reload": "turbo daemon clean",
    "start": "turbo run start"
  },
  "devDependencies": {
    "eslint": "^8.51.0",
    "eslint-config-custom": "workspace:*",
    "prettier": "3.0.3",
    "turbo": "^1.10.16-canary.1",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.9.1",
  "eslintConfig": {
    "extends": "custom",
    "root": true,
    "settings": {
      "next": {
        "rootDir": [
          "apps/*/"
        ]
      }
    }
  },
  "prettier": "@vercel/style-guide/prettier"
}
