{
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build:all": "turbo run build",
    "integrity:repair": "pnpm run integrity:validate --fix",
    "integrity:repair:all": "turbo run integrity:repair",
    "integrity:validate": "eslint . --ext cjs,js,json,mjs,ts,tsx --ignore-pattern apps/* --ignore-pattern packages/*",
    "integrity:validate:all": "turbo run integrity:validate",
    "start:dev:all": "turbo run start:dev --concurrency=14",
    "start:prod:all": "turbo run start:prod --concurrency=14",
    "test:all": "turbo run test",
    "turbo:daemon:reload": "turbo daemon clean"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-custom": "workspace:*",
    "prettier": "3.2.5",
    "turbo": "^1.12.4",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.4",
  "eslintConfig": {
    "extends": "custom",
    "root": true,
    "settings": {
      "next": {
        "rootDir": [
          "apps/*/"
        ]
      }
    }
  },
  "pnpm": {
    "overrides": {
      "@typescript-eslint/eslint-plugin": "7.1.0",
      "@typescript-eslint/parser": "7.1.0"
    }
  },
  "prettier": "@vercel/style-guide/prettier"
}
