{
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "pid:reload": "turbo daemon clean",
    "start": "turbo run start"
  },
  "devDependencies": {
    "eslint": "^8.51.0",
    "eslint-config-custom": "workspace:*",
    "prettier": "3.0.3",
    "turbo": "^1.10.15",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.9.0",
  "eslintConfig": {
    "extends": "custom",
    "root": true,
    "settings": {
      "next": {
        "rootDir": [
          "apps/*/"
        ]
      }
    }
  },
  "prettier": "@vercel/style-guide/prettier"
}
